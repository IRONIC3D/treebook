<h2>All Statuses</h2>

<div class="row">
  <% @statuses.each do |status| %>
    <div class="col-xs-6 col-md-3">
      <div class="box panel panel-primary">
        <div class="panel-heading center">
          <h4><strong><%= status.name %></strong></h4>
        </div>
        <div class="panel-body">
          <p><%= status.content %></p>
        </div>
        <div class="panel-footer">
          <%= link_to status do %>
            <span class="glyphicon glyphicon-eye-open"></span> View
          <% end %>
          -
          <%= link_to edit_status_path(status) do %>
            <span class="glyphicon glyphicon-edit"></span> Edit
          <% end %>
          -
          <%= link_to status, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span> Delete
          <% end %>
        </div>
      </div>
    </div>
  <% end %> 
</div>


<%= link_to 'New Status', new_status_path, class: "btn btn-primary" %>
